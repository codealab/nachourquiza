<div id="loader">
	<img src="/assets/person_loader.GIF" alt="">
	GUARDANDO
</div>
<div class="row" id="fade_form">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @user, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
			<p><%= f.input :name, label:"Nombre" %></p>
			<% if @user.photo_url.to_s.include?('/default/') %>
				<img src="" id="image_url" alt="">
			<% else %>
				<%= image_tag @user.photo_url(:thumb).to_s, id: 'image_url' %>
			<% end %>
			<p><%= f.input :photo, label:"Foto" %></p>
			<p><%= f.input :email, label:"Email" %></p>
		<% if current_user.admin? %>
			<% if !current_user?(@user) %>
				<p><%= f.input :admin, label:"Administrador" %></p>
			<% end %>
				<p><%= f.input :student, label:"Estudiante" %></p>
				<p><%= f.input :teacher, label:"Profesor" %></p>
		<% end %>
		<% if params[:action] == 'new' || params[:action] == 'create' %>
			<p><%= f.input :password, label:"Contrase침a" %></p>
			<p><%= f.input :password_confirmation, label:"Confirmaci칩n de Contrase침a" %></p>
		<% end %>
		<% if params[:action]=='new' %>
	<p><%= f.submit "Crear Usuario", class: "btn btn-sm btn-primary" %></p>
<% else %>
	<p><%= f.submit "Guardar Cambios", class: "btn btn-sm btn-primary" %></p>
<% end %>
    <% end %>
  </div>
  <% if params[:action] == 'edit' %>
		<div class="boton_der">
			<%= link_to edit_password_reset_path(@user) do %>
				<p><button type="button" class="btn btn-default">Cambiar contrase침a</button></p>
			<% end %>
		</div>
	<% end %>
</div>

<script>
	$(document).ready(function($) {
		$('#user_photo').imagePreview();
		$("#new_user, #edit_user_<%= @user.id %>").submit(function(){
			$("#fade_form").fadeOut();
			$("#loader").fadeIn();
		});
	});
</script>