<% lecture = lecture || @lecture %>
<% object = object || @unit  %>
<% index = index || object.lectures.count %>
<tr id="unit_<%= object.id %>_plan_<%= lecture.id %>" class="unit_plan">
	<td valign="middle" class="relative">
		<div class="arrow_asc">
			<a href="javascript:void(0);" class="asc left icon icon-chevron-up" data-id="<%= lecture.id %>" data-position="<%= index %>" onClick="course_actions.reorder(event);"></a>
		</div>
		<div class="arrow_desc">
			<a href="javascript:void(0);" class="left icon icon-chevron-down" data-id="<%= lecture.id %>" data-position="<%= index %>" onClick="course_actions.reorder(event);"></a>
		</div>
	</td>
	<td valign="middle">
		<!-- Button trigger video modal -->
		<%= link_to lecture.name, lecture_path(lecture) %>
	</td>
	<td class="aligncenter" valign="middle">
		<div data-toggle="modal" data-target="#video_lecture_modal">
			<%= image_tag "http://img.youtube.com/vi/#{lecture.video_url}/#{rand(1..3)}.jpg", :class => "pointer_cursor without_margin", data: { :lecture => lecture.name, video: lecture.video_url }, onClick: "course_actions.open_modal_video(event);" %>
		</div>
	</td>
	<td class="aligncenter" valign="middle">
		<%= link_to "Editar", edit_lecture_path(lecture), :class => "btn btn-info btn-xs" %>
	</td>
	<td class="aligncenter" valign="middle">
		<%= link_to "Borrar", lecture_path(lecture), :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: 'EstÃ¡s seguro de borrar este curso?' } %>
	</td>
</tr>