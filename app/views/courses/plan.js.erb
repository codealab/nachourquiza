<% if @lecture.valid? %>
	$("#errors_lectures_unit_<%= @unit.id %>").html("");
	$("#new_lecture_modal_<%= @unit.id %>").modal("hide");
	$("#container_lectures_unit_<%= @unit.id %>").append("<%= escape_javascript(render('plan')) %>");
<% else %>
	$("#errors_lectures_unit_<%= @unit.id %>").html("<%= escape_javascript(render('shared/error_messages', object: @lecture)) %>");
<% end %>