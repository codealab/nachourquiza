<% if @payments.empty? %>
<p>- No hay pagos - </p>
<% else %>
<table class="table table-striped tablesorter">
	<thead>
		<tr>
			<th class="col-sm-1">Fecha</th>
			<th class="col-sm-2">Concepto</th>
			<th>Aclaraci√≥n</th>
			<th class="col-sm-1">Cantidad</th>
		</tr>
	</thead>
	<tbody>
		<% @payments.each do |payment| %>
		<tr>
			<td><%= payment.date %></td>
