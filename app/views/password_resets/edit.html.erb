<% provide(:title, "Cambiar contraseña de: #{@user.name}") %>

<div class="boton_der">
  <div class="top_buttons">
    <%= link_to edit_user_path do %>
      <p><button type="button" class="btn btn-info">Regresar a Perfil</button></p></p>
    <% end %>
  </div>
  <h1>Cambiar contraseña de: <%= @user.name %><span class="line"></span></h1>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @user, :url => password_reset_path(params[:id]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <% if !current_user.admin? %>
        <p><%= f.input :old_password, label: "Contraseña Actual" %><p>
      <% end %>
      <p><%= f.input :password, label: "Contraseña" %><p>
      <p><%= f.input :password_confirmation, label: "Confirmar Contraseña" %><p>
      <p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
    <% end %>
  </div>
</div>